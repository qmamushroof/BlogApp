@model BlogApp.Models.ViewModels.PasswordViewModel
@{
    ViewData["Title"] = "Change password";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword">

            <div class="form-floating mb-3">
                <input asp-for="CurrentPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="CurrentPassword"></label>
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="NewPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="NewPassword"></label>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Confirm</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}