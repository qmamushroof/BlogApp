@model List<BlogApp.Models.ViewModels.BlogViewModel>

@foreach (var blog in Model)
{
    <div class="row blog-post mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3>
                        @blog.Title
                    </h3>
                    <small class="text-muted">Posted by @blog.AuthorName on @blog.CreatedAt.ToString("MMM dd, yyyy")</small>
                </div>
                <div class="card-body">
                    @{
                        var content = blog.Content.Length > 300 ? blog.Content.Substring(0, 300) + "..." : blog.Content;
                    }
                    <p>@Html.Raw(content)</p>
                </div>
                <div class="card-footer">
                    <span class="badge bg-primary">Likes: @blog.LikesCount</span>
                    <span class="badge bg-secondary">Dislikes: @blog.DislikesCount</span>
                    <a asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id" class="btn btn-sm btn-outline-primary">Read More</a>
                </div>
            </div>
        </div>
    </div>
}